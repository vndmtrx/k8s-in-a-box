service:
  enabled: true
  type: LoadBalancer
  annotations:
    metallb.universe.tf/address-pool: pool-fixo
  spec:
    loadBalancerIP: "172.24.0.110"

deployment:
  enabled: true
  replicas: 2

podDisruptionBudget:
  minAvailable: 1

providers:
  kubernetesGateway:
    enabled: true

gatewayClass:
  enabled: true

gateway:
  enabled: false

autoscaling:
  minReplicas: 2
  maxReplicas: 4

resources:
  requests:
    cpu: 100m
    memory: 100Mi
  limits:
    cpu: 100m
    memory: 100Mi

tolerations:
  - key: "node-role.kubernetes.io/control-plane"
    effect: "NoSchedule"
  - key: "node-role.kubernetes.io/master"
    effect: "NoSchedule"

api:
  dashboard: true

additionalArguments:
  - "--api.insecure=true"
