KUBE_CONTROLLER_MANAGER_OPTS="
  --allocate-node-cidrs=true
  --authentication-kubeconfig=/etc/kubernetes/kube-controller-manager.kubeconfig
  --authorization-kubeconfig=/etc/kubernetes/kube-controller-manager.kubeconfig
  --bind-address=0.0.0.0
  --client-ca-file=/etc/kubernetes/pki/{{ pki_cas.kubernetes.path_cert | basename }}
  --cluster-name=kubernetes
  --cluster-signing-cert-file=/etc/kubernetes/pki/{{ pki_cas.kubernetes.path_cert | basename }}
  --cluster-signing-key-file=/etc/kubernetes/pki/{{ pki_cas.kubernetes.path_chave | basename }}
  --cluster-cidr={{ rede_cidr_pods }}
  --controllers=*,bootstrapsigner,tokencleaner
  --kubeconfig=/etc/kubernetes/kube-controller-manager.kubeconfig
  --leader-elect=true
  --requestheader-client-ca-file=/etc/kubernetes/pki/{{ pki_cas.front_proxy.path_cert | basename }}
  --root-ca-file=/etc/kubernetes/pki/{{ pki_cas.kubernetes.path_cert | basename }}
  --service-account-private-key-file=/etc/kubernetes/pki/controller-manager/{{ pki_certs.service_account.path_chave | basename }}
  --use-service-account-credentials=true
  --v=1
"
